.my{
  margin: 15rpx auto;
  border-top: solid 1px #ebebeb;
  border-bottom: solid 2px #ebebeb;
  width: 94%;
  background: #fff;
  padding: 3%;
  font-size: 30rpx
}
.my .my-item{
  font-size: 28rpx;
  padding: 0;
  margin: 22rpx 0
}
.my .my-item .myitem-name{
  width:20%;
  text-align: right;
  font-size: 1.3em;
  color: #5d5d5d;
  padding: 21rpx 0;
  float: left;
  height: 84rpx;
  line-height: 64rpx
}
.my .my-item button{
  width: 100%;
  /* background: #0098e4; */
  color: #fff;
  margin: 50rpx auto 0
}

.my-item view:nth-child(2){
  color: #444;
  width: 70%;
  display: inline-block;
  margin: 9rpx 0;
  border: 1px solid #e7e7e7;
  border-radius: 10rpx;
  margin-left:2%;
  padding: 0 16rpx;
  height: 84rpx;
  line-height: 84rpx
}
.my-item view:nth-child(2) input{
  height: 84rpx;
  line-height: 84rpx
}
.under{
  float: right
}

.mainText{
  font-size: 2.6em;
  color: green;
  text-align: center;
}
.ad_popError{ 
  background: green;
  color: #fff;
  height: 58rpx;
  line-height: 58rpx;
  font-size: 24rpx;
  text-align: center;
  visibility: hidden
  }